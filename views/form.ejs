<!-- views/form.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Adicionar Ramal</title>
</head>
<body>
    <h1>Adicionar Novo Ramal</h1>
    <form action="/add" method="POST">
        <label for="filial">Filial:</label>
        <input type="text" name="filial" required>

        <label for="setor">Setor:</label>
        <input type="text" name="setor" required>

        <label for="pessoa">Pessoa:</label>
        <input type="text" name="pessoa" required>

        <label for="ramal">Ramal:</label>
        <input type="text" name="ramal" required>

        <button type="submit">Adicionar Ramal</button>
    </form>

    <h2>Lista de Ramais</h2>
    <table>
        <thead>
            <tr>
                <th>Filial</th>
                <th>Setor</th>
                <th>Pessoa</th>
                <th>Ramal</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            <% if (ramais && ramais.length > 0) { %>
                <% ramais.forEach(ramal => { %>
                    <tr>
                        <td><%= ramal.filial %></td>
                        <td><%= ramal.setor %></td>
                        <td><%= ramal.pessoa %></td>
                        <td><%= ramal.ramal %></td>
                        <td>
                            <form action="/edit" method="POST" style="display:inline;">
                                <input type="hidden" name="id" value="<%= ramal.id %>">
                                <input type="text" name="filial" value="<%= ramal.filial %>" required>
                                <input type="text" name="setor" value="<%= ramal.setor %>" required>
                                <input type="text" name="pessoa" value="<%= ramal.pessoa %>" required>
                                <input type="text" name="ramal" value="<%= ramal.ramal %>" required>
                                <button type="submit">Editar</button>
                            </form>
                            <form action="/delete" method="POST" style="display:inline;">
                                <input type="hidden" name="id" value="<%= ramal.id %>">
                                <button type="submit">Excluir</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">Nenhum ramal encontrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
    <a href="/">Voltar para a Lista</a>
</body>
</html>
